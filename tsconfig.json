{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react-jsx",
    "module": "ESNext",
    "allowJs": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "include": ["src"]
}
